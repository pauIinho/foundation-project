{% extends "@App/base.html.twig" %}
{% block title %}Мои пожертвования - Личный кабинет{% endblock %}
{% block content %}
    <div class="row">
    {% include "@App/Components/Cabinet-sidebar/sidebar_contributor.html.twig" %}
        <div class="col-md-8">
            <h3 align="center">Мои пожертвования</h3>
            <ul class="nav nav-tabs">
                <li class="active"><a href="#current" data-toggle="tab">Текущие</a></li>
                <li><a href="#archive" data-toggle="tab">Архив</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active" id="current">
                    {% if currentDonations %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Название</th>
                                    <th>Описание</th>
                                    <th>Дата дарения</th>
                                    <th>Статус</th>
                                    <th>Операции</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for donation in currentDonations %}
                                <tr>
                                    <td>{{ donation.id }}</td>
                                    <td><a href="">{{ donation.name }}</a></td>
                                    <td>{{ donation.description }}</td>
                                    <td>{{ donation.receiptDate | date('Y-m-d H:i:s') }}</td>
                                    {% if donation.status == 0 %}
                                        {% set status_text = 'Требует одобрения' %}
                                    {% elseif donation.status == 1 %}
                                        {% set status_text = 'Одобрено' %}
                                    {% endif %}
                                    <td>{{ status_text }}</td>
                                    <td>
                                        <a href="#"><img src="/images/caran.png" width="20" height="20" alt="Редактирование"></a>
                                        <a href="#"><img src="/images/cancel.png" width="20" height="20" alt="Отмена"></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                        <p align="center">
                            Пока нет текущих пожертвований
                        </p>
                    {% endif %}
                </div>
                <div class="tab-pane" id="archive">
                    {% if archiveDonations %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Название</th>
                                    <th>Описание</th>
                                    <th>Дата дарения</th>
                                    <th>Статус</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for donation in archiveDonations %}
                                    <tr>
                                        <td>{{ donation.id }}</td>
                                        <td><a href="">{{ donation.name }}</a></td>
                                        <td>{{ donation.description }}</td>
                                        <td>{{ donation.receiptDate | date('Y-m-d H:i:s') }}</td>
                                        <td>Отправлено детям</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p align="center">
                            Архив пожертвований пуст
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
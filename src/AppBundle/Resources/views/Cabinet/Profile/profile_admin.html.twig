{% extends "@App/base.html.twig" %}
{% block title %}Профиль - Личный кабинет{% endblock %}
{% block content %}
    <div class="row">
        {% include "@App/Components/Cabinet-sidebar/sidebar_admin.html.twig" %}
        <div class="col-md-8">
            <h3 align="center">Профиль</h3>
            <form class="form-horizontal col-md-offset-3 col-md-6" action="{{ path('cabinet_profile_update') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{ user.email }}">
                </div>
                <div class="form-group">
                    <label class="control-label" for="password">Новый пароль</label>
                    <input type="password" class="form-control" name="password" placeholder="Введите новый пароль" value="">
                </div>
                <div class="form-group">
                    <p align="center">
                        <input type="submit" class="btn btn-primary" value="Сохранить изменения">
                    </p>
                </div>
            </form>
        </div>
    </div>
{% endblock %}